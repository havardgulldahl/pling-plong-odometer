<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="4.0" ExtensionBundleId="no.nrk.odometer" ExtensionBundleVersion="11.1"
ExtensionBundleName="Odometer Panel for Premiere Pro"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<ExtensionList>
		<Extension Id="no.nrk.odometer" Version="0.1.0" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
			<Host Name="PPRO" Version="9.0" />
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="6.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>

	<DispatchInfoList>
		<Extension Id="no.nrk.odometer">
			<DispatchInfo >
				<Resources>
					<MainPath>./index.html</MainPath>
					<ScriptPath>./PProPanel.jsx</ScriptPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<CEFCommandLine>
					<Parameter>--allow-file-access</Parameter>
					<Parameter>--allow-file-access-from-files</Parameter>
					<Parameter>--enable-nodejs</Parameter>
				</CEFCommandLine>
				<UI>
					<Type>Panel</Type>
					<Menu>♫ ♪ Odometer</Menu>
					<Geometry>
						<Size>
							<Height>300</Height>
							<Width>180</Width>
						</Size>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>